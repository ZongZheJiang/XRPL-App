generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // This tells Prisma to use the DATABASE_URL from your environment variables
  url      = env("DATABASE_URL")
}

// This model maps to the 'wallets' table we created in Supabase
model Wallet {
  classic_address String   @id @map("classic_address")
  public_key      String   @map("public_key")
  seed            String
  created_at      DateTime @default(now()) @map("created_at")

  @@map("wallets")
}
